<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:textAlignment="textStart"
        android:orientation="vertical"
        android:id="@+id/ly1"
        android:background="@color/colorBlue"
        android:layout_width="match_parent"
        android:padding="30dp"
        android:layout_height="450dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="Start managing your"
            android:textColor="@color/colorSousTitre"
            android:fontFamily="@font/jost"
            android:textSize="35dp"
            android:layout_marginTop="70dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="money with us!"/>

        <LinearLayout
            android:layout_width="300dp"
            android:orientation="horizontal"
           android:layout_marginTop="35dp"
            android:gravity="center"
            android:background="@drawable/btn_bg"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al ready signed up?"
                android:fontFamily="@font/roboto"
                android:textSize="18dp"
                android:textColor="@color/colorSousTitre"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="@font/roboto"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Log in"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="350dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/ly_bg"
        android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/et"
            android:padding="15dp"
            android:drawableEnd="@drawable/ic_email"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            />

        <EditText
            android:background="@drawable/et"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:drawableEnd="@drawable/ic_account_circle"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full name"
            />
        <EditText
            android:background="@drawable/et"
            android:inputType="textPassword"
            android:padding="15dp"
            android:drawableEnd="@drawable/ic_vpn_key"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:background="@drawable/btn_bg"
            android:layout_height="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get started"
                android:fontFamily="@font/jost"
                android:textSize="22dp"
                android:textColor="#ffffff"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>